#popup { width:800px; }
.header h1 { height:45px; padding:0 0 0 20px; color:#fff; font-size:14px; line-height:45px; background:#495164; }
.content { padding:20px 20px 60px; }
.btnArea { position:fixed; bottom:0; left:0; width:100%; padding:10px 0; border-top:1px solid #d7d5d5; text-align:center; background:#fbfafa; }

.xans-coupon-couponlist .title { margin:0 0 10px; }
.xans-coupon-couponlist .title h3 { color:#353535; font-size:12px; }
.xans-coupon-couponlist .boardList { table-layout:fixed; border:1px solid #d7d5d5; color:#353535; line-height:1.5; }
.xans-coupon-couponlist .boardList th { padding:11px 0 9px; border-left:1px solid #e9e9e9; font-weight:normal; background:#fbfafa; }
.xans-coupon-couponlist .boardList th:first-child { border-left:0; }
.xans-coupon-couponlist .boardList td { padding:8px 0 5px; border-top:1px solid #e9e9e9; text-align:center; vertical-align:middle; word-wrap:break-word; }
.xans-coupon-couponlist .boardList td select { width:100%; margin:2px 0 0; }
.xans-coupon-couponlist .boardList th.delivery { width:85px; }
.xans-coupon-couponlist .boardList th.thumb { width:92px; }
.xans-coupon-couponlist .boardList th.product { width:auto; }
.xans-coupon-couponlist .boardList th.price { width:95px; }
.xans-coupon-couponlist .boardList th.select { width:120px; }
.xans-coupon-couponlist .boardList th.coupon { width:120px; }
.xans-coupon-couponlist .boardList td.thumb img { width:80px; }
.xans-coupon-couponlist .boardList td.product { padding-left:10px; text-align:left; }
.xans-coupon-couponlist .boardList td.product a { color:#353535; }
.xans-coupon-couponlist .boardList td.product div.option  { margin:9px 0 0; color:#757575; line-height:16px; }
.xans-coupon-couponlist .boardList td.product div.type { margin:9px 0 0; line-height:16px; }
.xans-coupon-couponlist .boardList td.delivery,
.xans-coupon-couponlist .boardList td.select { color:#757575; }

.xans-coupon-couponlist .boardTotal { margin:20px 0 0; border:1px solid #777; color:#353535; line-height:1.5; }
.xans-coupon-couponlist .boardTotal th { height:39px; border-left:1px solid #e9e9e9; line-height:39px; background:#fbfafa; }
.xans-coupon-couponlist .boardTotal td { height:58px; border-top:1px solid #e9e9e9; border-left:1px solid #e9e9e9; line-height:58px; text-align:center; font-size:20px; }
.xans-coupon-couponlist .boardTotal th:first-child,
.xans-coupon-couponlist .boardTotal td:first-child { border-left:0; }
.xans-coupon-couponlist .boardTotal td img { vertical-align:middle; }
.xans-coupon-couponlist .boardTotal td .box { word-wrap:break-word; word-break:break-all; }
.xans-coupon-couponlist .boardTotal td strong.tail { font-size:14px; }
.xans-coupon-couponlist .boardTotal td span.tail { font-size:12px; color:#757575; }
.xans-coupon-couponlist .boardTotal .detail td { height:auto; padding:10px 9px; line-height:normal; text-align:left; font-size:12px; color:#757575; }
.xans-coupon-couponlist .boardTotal .detail li { padding:0 0 0 9px; background:url("http://img.echosting.cafe24.com/skin/base_ko_KR/order/ico_grid.gif") no-repeat 0 7px; }
.xans-coupon-couponlist .boardTotal tfoot td { padding:0 10px 0 0; text-align:right; font-size:12px; background:#fbfafa; }
.xans-coupon-couponlist .boardTotal tfoot td .total { margin:0 0 0 15px; color:#008bcc; }
.xans-coupon-couponlist .boardTotal tfoot td .total .price { font-size:17px; }