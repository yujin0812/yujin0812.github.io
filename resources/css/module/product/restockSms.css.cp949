#popup { width:500px; }
.xans-product-restocksms .header { padding:0 0 0 19px; height:45px; background:#495164; }
.xans-product-restocksms .header h1 { font-size:14px; color:#fff; line-height:45px; }
.xans-product-restocksms .content { padding:20px; background:#fff; }
.xans-product-restocksms .btnArea { padding:9px 0 10px; border-top:1px solid #d7d5d5; text-align:center; background:#fbfafa; }

.xans-product-restocksms .product { overflow:hidden; position:relative; padding:15px 15px 15px 146px; border:5px solid #e8e8e8; }
.xans-product-restocksms .product .prdImg { float:left; width:90px; margin:0 0 0 -125px; text-align:center; }
.xans-product-restocksms .product .prdImg img { max-width:88px; border:1px solid #d6d6d6; }
.xans-product-restocksms .product .info h2 { font-size:14px; color:#2e2e2e; }
.xans-product-restocksms .product .info p { margin:5px 0 0; color:#757575; }
.xans-product-restocksms .product .info .optionWrap { margin:20px 0 0; }
.xans-product-restocksms .product .info .optionWrap ul li { padding:3px 0; }
.xans-product-restocksms .product .info .optionWrap ul li span { display:inline-block; width:50px; }
.xans-product-restocksms .product .info .optionWrap .optionBox { margin:12px 0 5px; padding:3px 7px; border-top:1px solid #ccc; border-bottom:1px solid #ccc; line-height:18px; }
.xans-product-restocksms .product .info .optionWrap .optionBox ul li { border-top:1px solid #ebebeb; }
.xans-product-restocksms .product .info .optionWrap .optionBox ul li:first-child { border-top:0; }
.xans-product-restocksms .product .info .optionWrap .optionBox ul li img { vertical-align:-1px; }

.xans-product-restocksms .smsArea { margin:17px 0 0; color:#353535; line-height:18px; }
.xans-product-restocksms .smsArea p { margin:10px 0; }
.xans-product-restocksms .smsArea strong { color:#008bcc; }
.xans-product-restocksms .smsArea .contact { padding:7px 10px; border-radius:5px; background:#f1f1f1; }

.xans-product-restocksms .smsArea .contact strong { color:#2e2e2e; }
.xans-product-restocksms .smsArea .inputTypeText { width:60px; height:21px; padding-top:1px; }