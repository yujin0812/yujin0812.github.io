#popup .xans-product-sizeguide { margin-top:-360px; }
.xans-product-sizeguide { position:fixed; top:50%; left:50%; width:820px; margin:-375px 0 0 -410px; max-height:720px; }
.xans-product-sizeguide .header { position:relative; border:1px solid #333; border-width:0 1px 0 1px; }
.xans-product-sizeguide .header h1 { height:35px; padding:0 35px 0 19px; color:#fff; font-size:14px; line-height:35px; background:#495164; }
.xans-product-sizeguide .header .close { position:absolute; right:20px; top:10px; }
.xans-product-sizeguide .header .close img { cursor:pointer; }
.xans-product-sizeguide .content { overflow:auto; position:relative; max-height:685px; padding:20px 20px 20px 20px; border:1px solid #757575; border-top:0; background:#fff; max-height:735px\9; zoom:1; }
 
.xans-product-sizeguide h2 { margin:0 0 10px; padding:0 0 0 10px; font-size:12px; color:#444; background: url("http://img.echosting.cafe24.com/skin/base_ko_KR/layout/ico_customer.gif") no-repeat 1px 4px; }
.xans-product-sizeguide .guideBoard { margin:0 0 20px; }
.xans-product-sizeguide .guideBoard table { table-layout:fixed;  border-spacing:0; border-collapse:collapse; line-height:1.5; background-color:#fff; }
.xans-product-sizeguide .guideBoard th,
.xans-product-sizeguide .guideBoard td { padding:7px 9px 5px; text-align:center; vertical-align:middle; }
.xans-product-sizeguide .guideBoard th { font-weight:normal; background-color:#f0f2f2; }
.xans-product-sizeguide .guideBoard tbody th { border:1px solid #cbcdce; }
.xans-product-sizeguide .guideBoard thead th { border:1px solid #cbcdce; color:#757575; }
.xans-product-sizeguide .guideBoard tbody td { border:1px solid #d7d5d5; }
.xans-product-sizeguide .guideBoard tbody td { border:1px solid #d7d5d5; }
.xans-product-sizeguide .guideBoard thead th .nation { color:#1b1b1b; }
.xans-product-sizeguide .guideBoard.pants { margin-top:10px; }
.xans-product-sizeguide .guideBoard.pants thead { overflow:hidden; position:absolute; width:0; height:0; white-space:nowrap; text-indent:150%; font-size:0; line-height:0; border:0; }
.xans-product-sizeguide .guideBoard.pants tbody td { border-top-width:1px; }
 
.xans-product-sizeguide .userGuide img { max-width:100%; height:auto !important; }
.xans-product-sizeguide .userGuide table th,
.xans-product-sizeguide .userGuide table td { word-break:break-all; }
 
.xans-product-sizeguide .info { margin:10px 0 0; line-height:20px; }
.xans-product-sizeguide .info span { display:block; padding:0 0 0 15px; }